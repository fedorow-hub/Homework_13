<Page x:Class="Homework_13.Views.AccountOperationWindow.Pages.BetweenTheirAccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Homework_13.Views.AccountOperationWindow.Pages"
      xmlns:components ="clr-namespace:Homework_13.Components"
      xmlns:vm ="clr-namespace:Homework_13.ViewModels" d:DataContext="{d:DesignInstance Type=vm:BetweenTheirAccountsViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BetweenTheirAccountPage">   

    <Grid>
        <components:GaugeIndicator VerticalAlignment="Top" HorizontalAlignment="Left" Width="80" Height="80" Value="{Binding Path=FluentCount}"/>
        <Slider VerticalAlignment="Top" 
                HorizontalAlignment="Stretch" 
                Margin="90,40,10,0" Height="30" 
                Minimum="0" Maximum="100" Value="{Binding FluentCount}"/>
        <!--<TextBlock Text="Операции между счетами"/>-->
        

    </Grid>
</Page>
